html
    head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title CBT - Login Page
    link(rel="stylesheet", href="/assets/css/bootstrap-grid.css") 
    link(rel="stylesheet", href="/assets/css/bootstrap-reboot.css") 
    link(rel="stylesheet", href="/assets/css/bootstrap-utilities.css") 
    link(rel="stylesheet", href="/assets/css/bootstrap.css") 
    link(rel="stylesheet", href="/assets/css/bootstrap.rtl.css") 
    body
        header
            nav(class="navbar navbar-expand-lg bg-body-tertiary p-0")
                div(class="container-fluid bg-primary")
                    a(class="navbar-brand text-warning" href="/") CBT
                    button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation")
                        span(class="navbar-toggler-icon")
                    div(class="collapse navbar-collapse" id="navbarText")
                        ul(class="navbar-nav me-auto mb-2 mb-lg-0")
                            li(class="nav-item mx-3")
                                a(class="nav-link text-warning" href="/signup") Register
                            li(class="nav-item mx-3")
                                a(class="nav-link text-warning" href="/login") Login
                            li(class="nav-item mx-3")
                                a(class="nav-link text-warning" href="/cbt") Test
                            li(class="nav-item mx-3")
                                a(class="nav-link text-warning" href="/cbt/test/result") Result 
                        span(class="navbar-text text-warning")
        main
            div(class="container-xxl col-sm-6 bg-light mt-4 p-4")
                h3(class="mx-1") Login Student
                form(method="post" action="/login" name="userLoginForm")
                    div(class="row mb-3 m-1")
                        label(for="id" class="col-sm-4 col-form-label m-0 p-0") Identification Number
                        div(class="col-sm-8")
                        input(type="text" class="form-control" id="id" name="id")
                    div(class="row mb-3 m-1")
                        label(for="password" class="col-sm-4 col-form-label m-0 p-0") Password
                        div(class="col-sm-8")
                        input(type="password" class="form-control" id="password" name="password")
                    button(type="submit" class="btn btn-primary text-warning m-1") Sign in
        script(src="/assets/js/bootstrap.bundle.js") 
        script(src="/assets/js/bootstrap.bundle.js") 
        script(src="/assets/js/bootstrap.bundle.js") 