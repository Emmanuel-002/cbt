html
    head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Admin Register - CBT
    link(rel="stylesheet", href="/assets/css/bootstrap-grid.css") 
    link(rel="stylesheet", href="/assets/css/bootstrap-reboot.css") 
    link(rel="stylesheet", href="/assets/css/bootstrap-utilities.css") 
    link(rel="stylesheet", href="/assets/css/bootstrap.css") 
    link(rel="stylesheet", href="/assets/css/bootstrap.rtl.css") 
    body
        header
            nav(class="navbar navbar-expand-lg bg-body-tertiary p-0")
                div(class="container-fluid bg-primary")
                    a(class="navbar-brand text-warning" href="#") CBT
                    button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation")
                        span(class="navbar-toggler-icon")
                    div(class="collapse navbar-collapse" id="navbarText")
                        ul(class="navbar-nav me-auto mb-2 mb-lg-0")
                            li(class="nav-item mx-3")
                                a(class="nav-link text-warning" href="/admin/signup") Register
                            li(class="nav-item mx-3")
                                a(class="nav-link text-warning" href="/admin/login") Login
                            li(class="nav-item mx-3")
                                a(class="nav-link text-warning" href="/admin/student") Student
                            li(class="nav-item mx-3")
                                a(class="nav-link text-warning" href="/admin/result") Result 
                            li(class="nav-item mx-3")
                                a(class="nav-link text-warning" href="/admin/logout") Logout
                        span(class="navbar-text text-warning") Admin
        main
            div(class="container-sm col-sm-4 bg-light mt-4 p-4")
                h3(class="mx-1") Admin Register
                form(method="post" action="/admin/signup" name="signupAdminForm")
                    div(class="row mb-3 m-1")
                        label(for="fullname" class="col-sm-4 col-form-label m-0 p-0") Full Name
                        div(class="col-sm-8")
                        input(type="text" class="form-control" id="fullname" name="fullname")
                    div(class="row mb-3 m-1")
                        label(for="email" class="col-sm-4 col-form-label m-0 p-0") E-mail
                        div(class="col-sm-8")
                        input(type="email" class="form-control" id="email" name="email")
                    div(class="row mb-3 m-1")
                        label(for="password" class="col-sm-4 col-form-label m-0 p-0") Password
                        div(class="col-sm-8")
                        input(type="confirm_password" class="form-control" id="password" name="password")
                    div(class="row mb-3 m-1")
                        label(for="password" class="col-sm-4 col-form-label m-0 p-0") Confirm Password
                        div(class="col-sm-8")
                        input(type="password" class="form-control" id="confirm_password" name="confirm_password")
                    button(type="submit" class="btn btn-primary text-warning m-1") Sign up
</form>
        script(src="/assets/js/bootstrap.bundle.js") 
        script(src="/assets/js/bootstrap.bundle.js") 
        script(src="/assets/js/bootstrap.bundle.js") 